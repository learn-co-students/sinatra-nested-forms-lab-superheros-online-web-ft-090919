<!DOCTYPE html>
<html>
    <head>
        <title>Superhero Team</title>
    </head>
    <body>
        <h1><%= @team.name %></h1>
        <h2>Team Motto: <%= @team.motto %></h2>
        <% @heroes.each do |hero| %>
            <% if hero.name != "" %>
                <h2>Hero Name: <%= hero.name %></h2>
                <p>Hero Power: <%= hero.power %></p>
                <p>Hero Biography: <%= hero.bio %></p>
            <% end %>
        <% end %>
    </body>
</html>


